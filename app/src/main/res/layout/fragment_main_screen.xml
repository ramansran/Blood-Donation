<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    tools:context=".MainScreen">




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:id="@+id/imagebox">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:src="@drawable/donate"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/connect_text"
        android:layout_centerVertical="true"
        android:text="Connect with us via mobile number"
        android:textColor="#000000"
        android:layout_below="@id/imagebox"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_marginTop="35dp"
        />


    <Button

        android:id="@+id/mobile_btn"
        android:text="Mobile Number"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_width="270dp"
        android:elevation="20dp"
        android:layout_height="40dp"
        android:background="@drawable/buttonshape_sign_up_with_mobile"
        android:layout_below="@id/connect_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        />



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/under_img"
        android:layout_below="@id/mobile_btn"
        android:src="@drawable/rectangle"
        android:scaleType="fitXY"
        android:layout_marginTop="27dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/under_path"
        android:layout_marginTop="25dp"
        android:scaleType="fitXY"
        android:src="@drawable/rsz_path"
        android:layout_below="@id/mobile_btn"/>

</RelativeLayout>