<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/first"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@color/White"
       >


        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/first_profile_request_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="15dp"
            android:layout_alignParentLeft="true"
            android:scaleType="centerInside"
            app:civ_border_color="@android:color/white"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/first_profile_txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/first_profile_request_img"
            android:text="Ninja Singer"
            android:layout_toRightOf="@id/first_profile_request_img"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginLeft="15dp"/>

        <TextView
            android:id="@+id/desc_txt_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Need for brother in mumbai"
            android:layout_below="@id/first_profile_txt_name"
            android:layout_toRightOf="@id/first_profile_request_img"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"/>

        <Button
            android:id="@+id/first_offer"
            android:text="Offer Help"
            android:textColor="#FF1F3D"
            android:textSize="15sp"
            android:layout_width="160dp"
            android:layout_height="30dp"
            android:background="@drawable/list_buttons"
            android:layout_below="@id/desc_txt_desc"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="10dp"
            />

        <android.support.design.widget.CoordinatorLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/White"
            android:layout_width="wrap_content">

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:backgroundTint="@color/colorPrimary" />


            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Need"
                android:elevation="6dp"
                android:textSize="12dp"
                android:textColor="#ffffff"
                app:layout_anchor="@id/fab"
                android:layout_marginTop="7dp"
                app:layout_anchorGravity="top|center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A+"
                android:id="@+id/nB"
                android:elevation="6dp"
                android:textSize="10dp"
                android:textColor="#ffffff"
                android:layout_marginBottom="10dp"
                app:layout_anchor="@id/fab"
                app:layout_anchorGravity="bottom|center"/>

        </android.support.design.widget.CoordinatorLayout>
    </RelativeLayout>


</RelativeLayout>