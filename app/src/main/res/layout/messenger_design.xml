<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/meeages_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/first"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:background="@color/White"
            android:layout_below="@id/upper_box">


            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/first_profile_img_m"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_marginLeft="15dp"
                android:layout_alignParentLeft="true"
                android:scaleType="centerInside"
                app:civ_border_width="2dp" />

            <TextView
                android:id="@+id/first_profile_txt_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/first_profile_img_m"
                android:text="Ninja Singer"
                android:layout_toRightOf="@id/first_profile_img_m"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/desc_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_below="@id/first_profile_txt_m"
                android:layout_toRightOf="@id/first_profile_img_m"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:id="@+id/date"
                android:layout_alignParentRight="true"
                android:text="9 may"/>

            <android.support.design.widget.CoordinatorLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_alignParentRight="true"
                android:layout_marginTop="25dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/White"
                android:layout_width="wrap_content">



                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab1"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    app:backgroundTint="@color/profile" />


                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text=""
                    android:id="@+id/count"
                    android:elevation="6dp"
                    android:textSize="10dp"
                    android:textColor="#ffffff"
                    app:layout_anchor="@id/fab1"
                    app:layout_anchorGravity="center"/>


            </android.support.design.widget.CoordinatorLayout>
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>