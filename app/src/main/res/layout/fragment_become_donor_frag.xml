<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".become_donor_frag">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Become A Donor"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/become_a_donor"
        />

    <EditText
        android:id="@+id/name_edit_text"
        android:layout_width="355dp"
        android:layout_height="35dp"
        android:layout_below="@id/become_a_donor"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:background="@drawable/rounded_border_edittext"
        android:hint="Name"
        android:textAlignment="center"/>

    <EditText
        android:id="@+id/e_mail_edit_text"
        android:layout_width="355dp"
        android:layout_height="35dp"
        android:layout_below="@id/name_edit_text"
       android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_border_edittext"
        android:hint="E-mail"
        android:textAlignment="center"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="GENDER"
        android:layout_below="@id/e_mail_edit_text"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/gender_edit_text"/>

    <RadioGroup
        android:id="@+id/gender_radio_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/gender_edit_text"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/male"
            android:layout_width="wrap_content"
            android:layout_height="107dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/rsz_male"
            android:gravity="center"
            android:text="male" />

        <View
            android:layout_width="1dp"
            android:layout_height="80dp"
            android:layout_marginTop="15dp"
            android:background="#FF0000FF"
            android:layout_marginLeft="50dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="107dp"
            android:id="@+id/female"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="45dp"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/rsz_female"
            android:gravity="center"
            android:text="female"/>

    </RadioGroup>

    <TextView
        android:id="@+id/select_blood_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Blood Group"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/gender_radio_buttons"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        />






        <RadioGroup
            android:layout_marginTop="15dp"
            android:layout_below="@id/select_blood_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/blood_group_buttons"
            android:orientation="horizontal">



                <RadioButton
                    android:id="@+id/Aplus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A+"
                    android:textStyle="bold"
                    android:textColor="@color/profile"
                    android:textSize="9dp"
                    />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:layout_marginLeft="5dp"/>


                <RadioButton
                    android:id="@+id/Aminus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A-"
                    android:textStyle="bold"
                    android:textColor="@color/profile"
                    android:textSize="9dp"
                    />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:layout_marginLeft="5dp"/>

                <RadioButton
                    android:id="@+id/Bplus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B+"
                    android:textStyle="bold"
                    android:textColor="@color/profile"
                    android:textSize="9dp"
                    />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:layout_marginLeft="5dp"/>

                <RadioButton
                    android:id="@+id/Bminus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B-"
                    android:textStyle="bold"
                    android:textColor="@color/profile"
                    android:textSize="9dp"
                    />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:layout_marginLeft="5dp"/>

                <RadioButton
                    android:id="@+id/ABplus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AB+"
                    android:textStyle="bold"
                    android:textColor="@color/profile"
                    android:textSize="9dp"
                    />
                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="@color/grey"
                    android:layout_marginLeft="5dp"/>
                <RadioButton
                    android:id="@+id/ABminus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AB-"
                    android:textStyle="bold"
                    android:textColor="@color/profile"
                    android:textSize="9dp"
                    />
            <View
                android:layout_width="2dp"
                android:layout_height="match_parent"
                android:background="@color/grey"
                android:layout_marginLeft="5dp"/>
               <RadioButton
                   android:id="@+id/Oplus"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="O+"
                   android:textStyle="bold"
                   android:textColor="@color/profile"
                   android:textSize="9dp"
                   />
               <View
                   android:layout_width="2dp"
                   android:layout_height="match_parent"
                   android:background="@color/grey"
                   android:layout_marginLeft="5dp"/>

               <RadioButton
                   android:id="@+id/Ominus"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="O-"
                   android:textStyle="bold"
                   android:textColor="@color/profile"
                   android:textSize="9dp"
                   />


        </RadioGroup>

    <TextView
        android:id="@+id/select_profile_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Profile Picture"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_below="@id/blood_group_buttons"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="15dp"
        />
    <com.mikhaellopez.circularimageview.CircularImageView
        android:id="@+id/img_profile"
        android:layout_below="@id/select_profile_pic"
        android:layout_alignParentLeft="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@id/blood_group_buttons"
        android:scaleType="centerInside"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/baseline_account_circle_black_48"
        app:civ_border_color="@android:color/white"
        app:civ_border_width="2dp" />

    <TextView
        android:id="@+id/click_selct_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/img_profile"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="9dp"
        android:layout_toRightOf="@id/img_profile"
        android:text="Click Here To Select "
        android:textAlignment="center" />

    <RadioButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/numbr_visible_txt"
        android:layout_below="@id/img_profile"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="25dp"
        android:text="Do you want to make your number visible"
        />

    <Button
        android:id="@+id/become_donor_ok_btn"
        android:text="Done"
        android:textColor="#FCFFFE"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/become_donor_btn"
        android:layout_below="@id/numbr_visible_txt"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"


        />
    <ProgressBar
        android:id="@+id/pbar"
        style="?android:attr/progressBarStyle"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:progress="25"
        android:visibility="gone"
        android:layout_centerInParent="true"
        />

    <TextView
        android:id="@+id/genderError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/gender_radio_buttons"
        android:layout_marginStart="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/gender_edit_text"
        android:layout_toRightOf="@+id/gender_edit_text" />

    <TextView
        android:id="@+id/groupError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/blood_group_buttons"
        android:layout_below="@+id/gender_radio_buttons"
        android:layout_marginStart="9dp"
        android:layout_marginLeft="9dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="2dp"
        android:layout_toEndOf="@+id/select_blood_txt"
        android:layout_toRightOf="@+id/select_blood_txt" />

</RelativeLayout>